# shellcheck disable=all

# Reload sxhkd
ctrl + shift + Escape
    pkill -usr1 -x sxhkd &

# Reload bspwm
super + shift + r
    bspc wm -r &

# Quit / Logout bspwm
super + alt + q
    bspc quit &

# Show powermenu
super + ctrl + p
    ~/.config/rofi/powermenu/type-4/powermenu.sh

# sudo pacman -S i3lock
super + shift + l
  ~/.local/bin/i3lock/i3lock-fancy.sh &

# Foucs Next Window
alt + Tab
    bspc node -f next.local.window &

# super + close (w) or kill all (shit+w) window
super + {_,shift + }w
	bspc node -{c,k} &

# super + close (w) or kill all (shit+w) window and move to last desktop
#alt + {_,shift + }w
#	bspc node -{c,k} && bspc desktop -f last &

# Vertical View / Windows arranged vertically
super + {_,shift + }KP_Multiply
    bspc node @parent -R 90 &

# Windows state to  Tile, Fullscreen, Floating
super + shift +{Num_Lock, KP_Divide, KP_Subtract}
    bspc node -t {fullscreen, tiled, floating} &

# Send Window To other Workspaces 1-9,0(10)
super + {_,shift + }{1-9,0}
    bspc {desktop -f, node -d} '^{1-9,10}' &

# Rotate Among Windows in current workspace
super + shift + Tab
    bspc node @/ -C {forward,backward} &

# Controls the size of only the 2nd Window in current workspace
# Numpad: 4(inc width), 6(dec width), 8(inc height), 5(dec height)
super + shift  + {KP_8,KP_4,KP_5,KP_6}
    bspc node -z {top 0 -30,left -30 0,top 0 30,left 30 0} &


# Disable touchpad
super + shift + braceleft
    xinput --disable 'ELAN1200:00 04F3:30BA Touchpad' &

# Enable touchpad
super + shift + braceright
    xinput --enable 'ELAN1200:00 04F3:30BA Touchpad' &

# Increase brightness
XF86MonBrightnessUp
    light -A 5 && light -O &

# Decrease brightness
XF86MonBrightnessDown
    light -U 5 && light -O &

# Increase brightness
super + KP_Add
    light -A 5 && light -O &

# Decrease brightness
super + KP_Subtract
    light -U 5 && light -O &


# Mute mic
XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Mute volume
XF86AudioMute
    pactl -- set-sink-mute 0 toggle &

# Raise volume, Increase Volume
XF86AudioRaiseVolume
    pactl -- set-sink-volume 0 +1% &

# Lower volume, Decrease volume
XF86AudioLowerVolume
    pactl -- set-sink-volume 0 -1% &

# Raise volume, Increase Volume
alt + KP_Add
    pactl -- set-sink-volume 0 +1% &

# Lower volume, Decrease volume
alt + KP_Subtract
    pactl -- set-sink-volume 0 -1% &


# Copy Window class to clipboard
super + shift + i
    xprop | grep WM_CLASS | cut -d'"' -f2 | head -n1 | xclip -selection clipboard &


# Toggle polybar
super + shift + f
    ~/.config/polybar/scripts/toggle.sh &

# Dmenu
super + Return
  ~/.local/bin/float-window kitty &

# Floating Terminal With Last Session
alt + {_,shift + } Return
  ~/.local/bin/float-window {alacritty -e "tmux attach", alacritty -e "tmux new"} &

# Floating System Terminal 
super + shift + Return
  xfce4-terminal &

# yay --needed --noconfirm -S xclip xsel rofi-emoji rofi-calc 
# Utils: uuid, password (8digit), emoji, calculator
#  rofi -show emoji -theme ~/.config/rofi/launchers/type-5/style-4.rasi, rofi -show calc -no-show-match -no-sort -theme ~/.config/rofi/launchers/type-7/style-7.rasi
super + u; {u,l,KP_8,KP_6,KP_3}
   ~/.local/bin/utils-generate { --dmenu, --lorem, --pass-8, --pass-16, --pass-32 } &


# Screenshot Interactive
super + i
  ~/.local/bin/screenshot "$(xdg-user-dir PICTURES)/screenshot-$(date +%F_%T).png"

# Screenshot
Print
  ~/.local/bin/screenshot "$(xdg-user-dir PICTURES)/screenshot-$(date +%F_%T).png"

# Screenshot
super + Print
  ~/.config/bspwm/scripts/screenshot.sh


# Wallpaper
super + r; {n,o,a,w,g,d,t,j}
   ~/.local/bin/wallpaper -d \
   /mnt/storage/wallpaper/{nature,nordic,anime,wallheaven,gruvbox,DeviantArt,art,japah} \
   -c ~/.config/polybar/colors.ini &

# Rofi applauncher: medium center 
alt + d
    rofi -show drun -theme ~/.config/rofi/themes/dmenu.rasi

# Rofi applauncher: dmenu style
alt + @space
    rofi -show drun -theme ~/.config/rofi/launchers/type-7/style-5.rasi

# Open browsers
super + b; {b, c, f, q}
  {brave, chromium, firefox, qutebrowser} &

# Open editors
super + e; {e, v}
  {emacsclient -c, code --password-store="gnome"}  &


# File Explorer
super + f
  nemo

# Bookmark manager
super + q; {a,s,r,d}
    ~/.local/bin/bookmark {--copy --notify, --select, --remove, --dmenu } &
