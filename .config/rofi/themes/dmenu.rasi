@import "~/.cache/wal/colors-rofi-dark.rasi"

* {
    background-color:      transparent;
    text-color:            rgba ( 255, 255, 255, 80% );
    font:                  "JetBrainsMono Nerd Font 14px";
}
 
#window {
    anchor:     south;
    location:   south;
    width:      100%;
    padding:    4px;
    transparency: "real";
    children:   [ horibox ];
}
 
#horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}

 

prompt {
    enabled: true;
    padding: 2px 10px;
}

#listview {
    enabled:                     true;
    spacing:                     2px;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      horizontal;
    background-color:            transparent;
}

#entry {
    expand:     false;
    width:      10em;
}


#element {
    padding: 4px 8px;
}

#element selected {
    border:                       0px solid;
    border-radius:                8px;
}
